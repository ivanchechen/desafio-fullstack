<p id="notice"><%= notice %></p>

<h1>Projetos</h1>
<div class="row">
<table class="table table-bordered data-table" id="" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Id do Projeto</th>
      <th>Nome do Projeto</th>
      <th>Data In√≠cio</th>
      <th>Data de fim</th>
      <th>% Completo</th>
      <th>Atrasado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= project.init_date.strftime("%d/%m/%Y") %></td>
        <td><%= project.end_date.strftime("%d/%m/%Y") %></td>
        <td><%= project.complete %></td>
        <td><%= project.late %></td>
        <td><%= link_to 'Ver', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Excluir', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-primary' %>
